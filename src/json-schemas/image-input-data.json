{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [ "structure", "quality", "stage", "camera" ],
  "properties": {
    "structure": {
      "oneOf": [
        { "type": "object" },
        { "type": "array" }
      ]
    },
    "quality": {
      "type": "string",
      "enum": [ "label", "normal", "hires" ]
    },
    "stage": {
      "type": "string",
      "minLength": 1
    },
    "camera": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "vAngle" ],
      "properties": {
        "fov": { "type": "number" },
        "angle": { "type": "number" },
        "hAngle": { "type": "number" },
        "vAngle": { "type": "number" },
        "distance": { "type": "number" },
        "autozoom": { "type": "boolean" },
        "height": { "type": "number" },
        "width": { "type": "number" }
      }
    },
    "processing": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "noise", "samples" ],
      "properties": {
        "noise": { "type": "number" },
        "samples": { "type": "number" },
        "floor": { "type": "array" },
        "no_intermediate": { "type": "boolean" },
        "floor_luminance": { "type": "number" },
        "envmap_name": { "type": "string" },
        "exposure": { "type": "number" },
        "gamma": { "type": "number" },
        "hist_min": { "type": "number" },
        "hist_max": { "type": "number" }
      }
    },
    "animation": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "numberOfFrames", "alpha" ],
      "properties": {
        "numberOfFrames": { "type": "number" },
        "alpha": { "type": "number" }
      }
    }
  }
}
